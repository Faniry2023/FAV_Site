@model List<FAV_Site.Helper.HelpPanier>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panier</title>
    <link rel="stylesheet" href="~/css/pan.css">
    <script defer src="~/js/app.js"></script>
</head>
<body>
    <div class="container">
        @Html.Partial("~/Views/Accueil/Header.cshtml")
        <h1>Mon Panier</h1>
        <table class="cart">
            <thead>
                <tr class="cart-header">
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                    <th>Opération</th>
                </tr>
            </thead>
            <tbody class="cart-body">
                @foreach(var item in Model)
                {
                    <tr class="cart-row">
                        <td class="cart-item">
                            <img src="@item.Image.ImageUrlCouv" alt="Produit 1">
                            <div class="cart-item-details">
                                <h3>@item.Produit.Nom_produit</h3>
                            </div>
                        </td>
                        <td class="cart-price">@item.Produit.Prix Ariary</td>
                        <td class="cart-price">@item.Quantite</td>
                        <td class="cart-total">@item.PrixAPayer Ariary</td>
                        <td class="cart-remove"><a>Supprimer</a></td>
                    </tr>
                }
                
            </tbody>
            <tfoot class="cart-footer">
                <tr>
                    <td colspan="4" class="delivery-address">
                        <label for="address">Lot et Adresse de livraison :</label>
                        <input type="text" id="address" name="address">
                    </td>
                    <td colspan="2" class="total-price">
                        <h3>Prix Total : <span id="total-price">50 €</span></h3>
                    </td>
                </tr>
                <tr>
                    <td colspan="6" class="checkout">
                        <a asp-controller="CommandeP" asp-action="Index" class="checkout-btn">Voir tout les commandes à passer</a>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</body>
</html>
